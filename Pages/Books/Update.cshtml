@page "/Books/{id}/Update"
@model BooksDBApp.Pages.Books.UpdateModel
@{
}

<h2 class="text-center mb-4">Update the details of the Book</h2>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="POST">
                <div class="row mb-3 justify-content-center align-items-center">
                    <label for="title" class="col-md-2 col-form-label text-center">Title</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="title" id="title"
                               placeholder="Enter book title" value="@Model.BookUpdateDTO!.Title" />
                    </div>
                </div>

                <div class="row mb-3 justify-content-center align-items-center">
                    <label for="title" class="col-md-2 col-form-label text-center">Author</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="author" id="author"
                               placeholder="Enter author's name" value="@Model.BookUpdateDTO!.Author" />
                    </div>
                </div>

                <div class="row mb-3 justify-content-center align-items-center">
                    <label for="title" class="col-md-2 col-form-label text-center">Publisher</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="publisher" id="publisher"
                               placeholder="Enter publisher's name" value="@Model.BookUpdateDTO!.Publisher" />
                    </div>
                </div>

                <div>
                    <div class="row mb-3 justify-content-center">
                        <div class="offset-md-1 col-md-3 d-grid">
                            <button class="btn btn-primary" type="Submit">Submit</button>
                        </div>
                    </div>
                    <div class="row mb-3 justify-content-center">
                        <div class="offset-md-1 col-md-3 d-grid">
                            <a class="btn btn-outline-danger" href="/Books/getall">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    @if (Model.ErrorList is not null)
    {
        @foreach (var error in Model.ErrorList)
        {
            <div>
                <p class="text-center text-danger">@error.Message</p>
            </div>
        }
    }
</div>
